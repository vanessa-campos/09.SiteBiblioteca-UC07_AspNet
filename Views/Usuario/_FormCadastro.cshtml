@model Usuario

<div class="row justify-content-md-center">
    <form asp-action="Cadastro" method="POST" class="col-md-4">
        <input type="hidden" asp-for="Id" />
        <fieldset>
            <div class="form-group">
                <label asp-for="Nome">Nome</label>
                <input asp-for="Nome" class="form-control" required/>
            </div>            
            <div class="form-group">
                <label asp-for="Login">Login</label>
                <input type="email" asp-for="Login" class="form-control" required/>
            </div>
            <div class="form-group">
                <label asp-for="Senha">Senha</label>
                <input type="password" asp-for="Senha" class="form-control" required/>
            </div>            
            <div class="form-group">                
                <label asp-for="Tipo">Tipo</label>
                <select asp-for="Tipo" class="form-control" required>
                    <option value="@Usuario.ADMIN">Administrador</option>
                    <option value="@Usuario.PADRAO">Padr√£o</option>
                </select>
            </div>               
        </fieldset>
        <input type="submit" value="Salvar" class="btn btn-primary"/>
    </form>
</div>